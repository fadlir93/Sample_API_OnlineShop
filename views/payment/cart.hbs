{{# if products}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-md-offset-3">
        <ul class="list-group">
            {{# each products}}
                <li class="list-group-item">
                    <span class="badge">{{this.qty}}</span>
                    <strong>{{this.item.productName}}</strong>
                    <span class="label label-success">Rp.{{this.price}}</span>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total: Rp. {{totalPrice}}</strong>
    </div> 
</div>
{{else}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No Items in Cart</h2>
        </div>
    </div>
{{/if}}